{
  "verbose": true,
  "roots": ["<rootDir>/src"],
  "testMatch": [
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "preset": "ts-jest",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "moduleNameMapper": {
    "^Components/(.*)": "./src/components/$1",
    ".+\\.(svg|css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "identity-obj-proxy"
  },
  "globals": {
    "window": {},
    "ts-jest": {
      "tsconfig": "./tsconfig.json"
    }
  },
  "setupFiles": [],
  "testURL": "http://localhost/",
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "!src/index.tsx",
    "!src/typings/**",
    "!src/**/*.stories.tsx",
    "!**/node_modules/**",
    "!**/coverage/**",
    "!**/build/**",
    "!**/cypress/**",
    "!**/public/**"
  ]
}